<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Account">
	<!-- Use type aliases to avoid typing the full classname every time. -->
	<resultMap id="AccountResult" type="Account">
		<result property="account" column="account" />
		<result property="email" column="email" />
		<result property="bank" column="bank" />
		<result property="money" column="money" />
	</resultMap>
	<!-- Select with no parameters using the result map for Account class. -->
	<insert id="createAc" parameterType="Account">
		insert into Account values(#{account}, #{email}, #{bank}, #{money})
	</insert>
	<select id="searchAccount" parameterType="String" resultType="int">
		select count(*) from Account where account=#{account}
	</select>
</mapper>